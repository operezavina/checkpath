<p id="notice"><%= notice %></p>

<h1>Assign Task list</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.patient.first_name %></td>
        <td><%= assignment.template.title %></td>
        <td><%= link_to 'Show', assignment_path(assignment, patient_id: assignment.patient_id) %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment, patient_id: assignment.patient_id) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignment', new_assignment_path(patient_id: params[:patient_id]) %> |
